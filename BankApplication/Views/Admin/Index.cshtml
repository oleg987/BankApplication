@model Microsoft.AspNetCore.Identity.UserManager<User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="bg-primary m-1 p-1 text-white"><h4>User Accounts</h4></div>

<table class="table table-bordered table-sm">
    <tr><th>ID</th><th>Name</th><th>Email</th><th>Roles</th></tr>
    @if (Model.Users.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
    }
    else
    {
        foreach (User user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>                
            </tr>
        }
    }
</table>

<a class="btn btn-warning" asp-action="Create">Create</a>

