@model ClientCreateViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="bg-primary m-1 p-1 text-white"><h4>Register</h4></div>

<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Login"></label>
        <input asp-for="Login" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MiddleName"></label>
        <input asp-for="MiddleName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PassportSeries"></label>
        <input asp-for="PassportSeries" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PassportNumber"></label>
        <input asp-for="PassportNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Tin"></label>
        <input asp-for="Tin" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Register</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

